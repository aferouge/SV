
sort
  st_deck = struct up | down;
  st_sign = struct on | off;

act
  s_deck: st_deck;

proc
  Deck(status: st_deck)
    = sum st: st_deck . s_deck(st) . Deck(st);

act
  s_pre_sign: st_sign;
  s_stop_sign: st_sign;

proc
  PreSign(status: st_sign)
    = sum st: st_sign . s_pre_sign(st) . PreSign(st);

  StopSign(status: st_sign)
    = sum st: st_sign . s_stop_sign(st) . StopSign(st);

init
%  allow(
%    {s_pre_sign|s_stop_sign},
    PreSign(off) || StopSign(off);
%  );
